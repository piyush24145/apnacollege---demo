#include <stdio.h>

int main() 
{int day;
printf("enter the day 1-7 :");
scanf("%d",&day);
switch(day)
{
    case 1: printf("monday ");
          break;
    case 2:printf("tuesday\n");
           break;
           
    case 3:printf("wednesday \n");
          break;
    case 4: printf("thursday \n");
           break;
     default: printf("not a valid day \n");}
    
    
    return 0;
}
